{
  "manifest_version": 3,
  "name": "asbplayer Subtitle Streamer",
  "version": "1.0.0",
  "description": "Stream asbplayer subtitles to your OS in real-time for language learning and sentence mining",

  "permissions": [
    "activeTab",
    "storage",
    "nativeMessaging"
  ],

  "host_permissions": [
    "<all_urls>"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],

  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
